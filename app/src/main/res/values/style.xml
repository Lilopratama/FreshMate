<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FreshMate.Splash" parent="Themes.FreshMate">
        <item name="android:windowBackground">@color/md_theme_background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TextAppearance.FreshMate.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.FreshMate.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.008</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FreshMate.Subtitle1" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.FreshMate.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.005</item>
    </style>

    <style name="TextAppearance.FreshMate.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.003</item>
    </style>

    <style name="TextAppearance.FreshMate.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.003</item>
    </style>

    <style name="TextAppearance.FreshMate.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="imageViewRounded8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="imageViewRounded16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="imageViewRounded24">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="imageViewBottomRounded24">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="imageViewCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

</resources>